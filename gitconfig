[user]
	name = Andreas WaÌŠlm
	email = andreas@walm.net
[difftool "Kaleidoscope"]
  cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
  prompt = false
[diff]
  tool = Kaleidoscope
[color]
  ui = auto
[alias]
  st = status
  ci = commit
  co = checkout
  di = diff
  dc = diff --cached
  dt = difftool
  amend = commit --amend
  aa = add --all
  head = !git l -1
  h = !git head
  r = !git l -20
  ra = !git r --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  l = log --graph --abbrev-commit --date=relative
  la = !git l --all
  fa = fetch --all
  pom = push origin master
  pbm = push bitbucket master
  pbd = push bitbucket develop
  ds = diff --stat=160,120
  dh1 = diff HEAD~1
  a = add
  b = branch
  p = push
  rma = "!git status | grep deleted | awk '{print $3}' | xargs git rm"
[status]
  color = true
[mergetool]
	keepBackup = true
[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
