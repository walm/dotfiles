# alwyas exit with q
bind index,pager,alias,attach,browser,compose,postpone q exit

# unset
bind index,pager \# noop
bind index,pager \& noop
bind index i        noop

# other bindings
bind pager ,q      toggle-quoted
bind pager /       search

bind pager j       next-line
bind pager k       previous-line
bind pager J       next-undeleted
bind pager K       previous-undeleted
bind pager gg      top
bind pager G       bottom

bind index gg      first-entry
bind index G       last-entry
bind index U       next-unread

# page up/down as in vim
bind index,pager \Cd next-page
bind index,pager \Cu previous-page

bind index,pager R group-reply
bind index,pager \Cj sidebar-next
bind index,pager \Ck sidebar-prev
bind index,pager \Cl sidebar-open

# search via notmuch
bind index ,f vfolder-from-query

# macros
macro index,pager ,n "<enter-command>toggle sidebar_visible\n" "toggle sidebar visible"
macro index,pager ,N "<sidebar-toggle>\n" "toggle sidebar"
macro index ,m "<change-vfolder>?\n" "show folders"
macro index ,p "<pipe-message>cat > ~/" "save message as"
macro index ,z "<sync-mailbox>\n<shell-escape>~/.mutt/scripts/mailrun\n" "sync IMAP"
macro index ,r "<tag-pattern>all\n<tag-prefix><clear-flag>N<untag-pattern>all\n" "mark all as read"
macro index ,R "<collapse-all><tag-pattern>all\n<tag-prefix><clear-flag>N<untag-pattern>all\n<collapse-all>" "mark all as read (collapsed)"
macro index ,v "<collapse-thread>" "collapse/uncollapse thread"
macro index ,V "<collapse-all>"    "collapse/uncollapse all threads"

macro index,pager S "<modify-labels>+â˜… \n<copy-message>=starred\n<sync-mailbox>" "starred message"
macro index,pager A "<modify-labels-then-hide>+archive -inbox\n<save-message>=all_mail\n<sync-mailbox>" "archive message"

# like gmail I what to jump
macro index,pager gi "<change-folder>!\n" "go to inbox"
macro index,pager gs "<change-vfolder>=Starred\n" "go to starred messages"
macro index,pager gd "<change-folder>=drafts\n" "go to drafts"

# vim: ft=muttrc
