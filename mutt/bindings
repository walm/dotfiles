# always exit with q
bind index,pager,alias,attach,browser,compose,postpone q exit

# address completion with query
bind editor <Tab> complete-query

# unset
bind index,pager \# noop
bind index,pager \& noop
bind index i        noop

# other bindings
bind pager ,q      toggle-quoted
bind pager /       search
bind compose p     postpone-message
bind index p       recall-message
bind index,pager S flag-message

# moving
bind pager J       next-line
bind pager K       previous-line
bind pager j       next-undeleted
bind pager k       previous-undeleted
bind pager gg      top
bind pager G       bottom

bind index gg      first-entry
bind index G       last-entry
bind index U       next-unread

# page up/down as in vim
bind index,pager \Cd next-page
bind index,pager \Cu previous-page

bind index,pager R group-reply
bind index,pager \Cj sidebar-next
bind index,pager \Ck sidebar-prev
bind index,pager \Cl sidebar-open

# folding
bind index za collapse-thread
bind index ,z collapse-all

# search via notmuch
bind index ,f vfolder-from-query

# macros
macro index,pager ,n "<enter-command>toggle sidebar_visible\n" "toggle sidebar visible"
macro index,pager ,N "<sidebar-toggle>\n" "toggle sidebar view"
macro index,pager \Cb "<pipe-message>urlview\n" "list and open url's in message"
macro index,pager A "<save-message>=all_mail\n<sync-mailbox>" "archive message"
macro index,pager ,r "<sync-mailbox>\n<shell-escape>~/.mutt/scripts/mailrun-quick\n" "syncing..."
macro index ,R "<tag-pattern>all\n<tag-prefix><clear-flag>N<untag-pattern>all\n" "mark all as read"
macro index ,p "<pipe-message>cat > ~/" "save message as"

# like gmail I what to jump
macro index,pager gi "<change-folder>!\n" "go to inbox"
macro index,pager gd "<change-folder>=drafts\n" "go to drafts"
macro index,pager gf "<change-folder>" "go to folder"

# vim: ft=muttrc
