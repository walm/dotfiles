#!/bin/bash
#
# Display geen dot in tmux status, if ssh session is active
#
GREEN="#[fg=colour2]"
DOT="â€¢"
SSH_CONNS=$(pgrep -f "ssh " | wc -l)
if [[ $SSH_CONNS -ge 1 ]]; then
  case "$1" in
    yabar)
      echo "!Y O 0xFFA1B56C Y!${DOT}"
      ;;
    *)
      echo "${GREEN}${DOT}"
      ;;
  esac
else
  echo ""
fi
